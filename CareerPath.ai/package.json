{
  "name": "careerpath-ai",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm run build:wasm && npm run build:python && npm run build:go && next build",
    "build:wasm": "cd logic/rust && wasm-pack build --target web --out-dir ../../public/wasm/matcher",
    "build:python": "cp logic/python/interest_parser.py public/pyodide/",
    "build:go": "cd logic/go && tinygo build -o ../../public/wasm/pdfgen.wasm -target wasm pdfgen.go"
  },
  "dependencies": {
    "next": "14.2.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "next-pwa": "^5.6.0"
  },
  "devDependencies": {
    "typescript": "^5.5.0",
    "@types/react": "^18.3.0",
    "@types/node": "^18.0.0",
    "wasm-pack": "^0.12.1",
    "tinygo": "^0.31.0"
  }
}
